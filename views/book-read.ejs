<script>

function obtenerTokenDeURL() {
  var url = window.location.href;
  var parametros = url.split('?')[1];
  if (parametros) {
      var tokens = parametros.split('&');
      for (var i = 0; i < tokens.length; i++) {
          var token = tokens[i].split('=');
          if (token[0] === 'token') {
              return token[1];
          }
      }
  }
  return null;
}

